@using Golmohammadi.Models.Models.Customer
@model List<Customers>

 <div class="container">
     <div class="row pt-4 pb-2">
         <div class="col-6">
             <h2 class="text-primary">
                 لیست مشتری ها
             </h2>
         </div>
         <div class="col-6 text-end">
            <a asp-controller="Customer" asp-action="CreateCustomer" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> ایجاد مشتری
             </a>
         </div>
     </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            نام مشتری
        </th>
        <th>
            ادرس
        </th>
        <th>
            شهر
        </th>
        <th>
            منطقه
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.Region</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Customer" asp-action="EditCustomer" asp-route-id="@item.Id" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Country" asp-action="DeleteCustomer" asp-route-id="@item.Id" class="btn btn-danger">
                                <i class="bi bi-trash3"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>